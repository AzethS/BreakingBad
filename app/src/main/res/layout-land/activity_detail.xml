<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/character_detail_info"
        android:textSize="20sp"
        android:padding="20dp"
        android:text="@string/character_info"
        android:textStyle="bold"
        android:textColor="@color/black"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:id="@+id/character_detail_image"
        />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/character_detail_name"
        android:textSize="24sp"
        android:padding="5dp"
        android:textStyle="bold"
        android:textColor="@color/black"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/character_detail_nick"
        android:text="@string/nickname"
        android:textSize="17sp"
        android:padding="5dp"
        android:textColor="@color/black"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/character_detail_status"
        android:textSize="15sp"
        android:text="@string/status"
        android:padding="5dp"
        android:textColor="@color/black"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/character_detail_birth"
        android:text="@string/birthday"
        android:textSize="15sp"
        android:padding="5dp"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/character_detail_occupation"
        android:textSize="15sp"
        android:text="@string/occupation"
        android:padding="5dp"
        android:textColor="@color/black"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/character_detail_appearance"
        android:text="@string/appearances"
        android:textSize="15sp"
        android:padding="5dp"
        android:textColor="@color/black"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>